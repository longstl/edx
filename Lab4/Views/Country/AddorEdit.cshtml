
@{
    ViewData["Title"] = "AddorEdit";
}

@model Lab4.Models.Country

@{
    ViewData["Title"] = "Create Or Edit";
}

<h4>Country Form</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddorEdit">
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" value="@Model.Code"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Region" class="control-label"></label>
                    <input asp-for="Region" class="form-control" value="@Model.Region"/>
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NationalFlag" class="control-label"></label>
                <input asp-for="NationalFlag" class="form-control" value="@Model.NationalFlag"/>
                <span asp-validation-for="NationalFlag" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}