@model List<Lab4.Models.Country>

<h1>List of Countries</h1>

<a asp-action="AddorEdit">Add</a>
<table border="1" cellpadding="11">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.Region</td>
            <td><img src="@item.NationalFlag" /></td>
            <td>
                <a asp-action="Detail" asp-route-id="@item.Code">Detail</a>
                <a asp-action="AddorEdit" asp-route-id="@item.Code">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
    }
</table>